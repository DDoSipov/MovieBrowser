<Window x:Class="MovieBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieBrowser"
        
        xmlns:LBT="clr-namespace:MyControlLib;assembly=MyControlLib"
        xmlns:RC="clr-namespace:MyControlLib.RatingControl_V2;assembly=MyControlLib"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <LBT:MyLabeledTextBox Text="lev" Label="{Binding Path=Value, ElementName=pep}"/>
        <LBT:MyLabeledTextBox Text="{Binding Path=DisplayValue, ElementName=pep}" Label="fef" Grid.Row="1"/>
        <RC:RatingControl Debug="True" Grid.Row="2" x:Name="pep"/>
    </Grid>
</Window>
